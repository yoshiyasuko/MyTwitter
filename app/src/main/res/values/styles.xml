<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="titleTextColor">@android:color/white</item>
        <item name="colorPrimary">@color/clearPurple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <!--タイトルテキストの色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--ハンバーガーボタンなどのアイコンの色-->
        <item name="android:textColorSecondary">@color/darkGray</item>
    </style>

    <!-- SelectableView --><style name="WhiteSelectableView">
    <item name="android:background">@color/white</item>
    <item name="android:foreground">?android:selectableItemBackground</item>
    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>
</style>


    <style name="SwitchButton">
        <item name="colorAccent">@color/lightBlue</item>
    </style>

</resources>
